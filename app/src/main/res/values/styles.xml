<resources>

    <style name="DevFest" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DevFest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.DevFest.CollapsingToolbar.Expanded.Inverse"
           parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="TextAppearance.DevFest.Card.Title"
           parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.DevFest.Card.Title.Inverse"
           parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.DevFest.Card.Subtitle"
           parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.DevFest.Card.Subtitle.Inverse"
           parent="TextAppearance.AppCompat.Subhead.Inverse">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
